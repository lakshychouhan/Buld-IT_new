<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/select.css">
    <title>CPU-RAM</title>
</head>
<body>
    <div class="heading">
        <h1>Choose RAM Drive</h1>
    </div>
    <div class="search-box">
        <input type="text" id="search" name="search" placeholder="Search Component">
        <input type="button" id="search-exec"  value="search" onclick="filter()">
    </div>
        <% ram.memory.forEach(element => { %>
            <% if(element.module_type=="DDR4"){%>
            <div class="listing">
                <li><a href="ram/<%= element.brand %> <%= element.model %>/output"><%= element.brand %> <%= element.model %></a></li>
                <% if(element.price[1]!="0.00"){ %>
                    <p class="price">â‚¹<%= Math.round(Math.round(parseFloat(element.price[1])*74.3)) %> </p>
                <% }else{ %>
                    <p class="price">Price: NA</p>
                <% } %>
                <p class="details">Physical Memory: <%= element.module_size.total/1000000000 %> GB, Type: <%= element.module_type %></p>
            </div>
        <% }}); %>  
</body>
<script src="/images/search.js"></script>
</html>