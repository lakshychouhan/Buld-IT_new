<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/select.css">
    <title>Choose a CPU</title>
</head>
<body>
    <div class="heading">
        <h1>Choose a CPU</h1>
    </div>
    <div class="search-box">
        <input type="text" id="search" name="search" placeholder="Search Component">
        <input type="button" id="search-exec"  value="search" onclick="filter()">
    </div>
    <br>
    <ul>
        <% cpus.cpu.forEach(element => { %>
            <% if (element.brand === 'Intel' && element.cores >=6 && ((element.integrated_graphics=="Intel UHD Graphics 630") || (element.integrated_graphics=="Intel UHD Graphics 750"))) { %>
                <div class="listing">
                    <ul id="search-elements">
                        <li><a href="/intel/cpu/<%= element.brand %> <%= element.model%>/motherboards"><%= element.brand %> <%= element.model %></a></li>
                    </ul>
                    <% if(element.price[1]!="0.00"){ %>
                        <p class="price">â‚¹<%= Math.round(parseFloat(element.price[1])*74.3) %> </p>
                    <% }else{ %>
                        <p class="price">Price NA</p>
                    <% } %>
                    <p class="details">Cores: <%= element.cores%>, Multithreading: <%= element.multithreading %>, TDP: <%= element.tdp %> watts</p>
                </div>       
            <% } %>
        <% }); %> 
    </ul>
</body>
<script src="/images/search.js"></script>
</html>