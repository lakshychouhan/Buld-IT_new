  />

  <script src="https://kit.fontawesome.com/ae8f1db1af.js" crossorigin="anonymous"></script>
  <style>
    body {
      margin: 0;
      padding: 0;
      background: black;
      color: white;
      font-family: 'JetBrains Mono', monospace;
    }
    .topbar {
      background: linear-gradient(to right, rgba(0,0,0,0.95), rgba(70,60,111,0.95));
      padding: 1rem 2rem;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 15px rgba(138,43,226,0.2);
      backdrop-filter: blur(8px);
    }
    .flex-container-left {
      display: flex;
      align-items: center;
      gap: 3rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .product-name {
      position: relative;
    }
    .product-name a {
      text-decoration: none;
      display: flex;
      align-items: center;
    }
    .product-name h3 {
      font-size: 1.8rem;
      margin: 0;
      background: linear-gradient(45deg, #8A2BE2, #4B0082);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      position: relative;
    }
    .product-name h3::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, #8A2BE2, transparent);
    }
    .elements {
      display: flex;
      gap: 2rem;
    }
    .txt-space {
      position: relative;
      padding: 0.5rem 1rem;
      transition: all 0.3s ease;
    }
    .txt-space a {
      text-decoration: none;
      color: white;
    }
    .txt-space h3 {
      margin: 0;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    .txt-space:hover h3 {
      color: #8A2BE2;
      transform: translateY(-2px);
    }
    .txt-space::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 0;
      height: 2px;
      background: #8A2BE2;
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }
    .txt-space:hover::after {
      width: 80%;
    }
    .active {
      background: rgba(138,43,226,0.1);
      border-radius: 20px;
    }
    .active h3 {
      color: #8A2BE2;
    }
    .build-sec {
      text-align: center;
      padding: 7rem 2rem 2rem;
    }
    .build-pictx {
      margin-bottom: 2rem;
    }
    .build-pictx h1 {
      margin-top: 1rem;
      font-size: 1.8rem;
    }
    .pre-cust-sec {
      display: flex;
      justify-content: center;
      gap: 2rem;
      padding: 2rem;
      flex-wrap: wrap;
    }
    .pc-option {
      width: 300px;
      transition: transform 0.3s ease;
      cursor: pointer;
    }
    .pc-option:hover {
      transform: scale(1.05);
    }
    .pc-option img {
      width: 100%;
      height: auto;
      border-radius: 10px;
    }
    .about-us {
      background: rgba(255, 255, 255, 0.05);
      padding: 3rem;
      margin-top: 2rem;
    }
    .about-content {
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }
    .about-content h2 {
      color: #8A2BE2;
      margin-bottom: 1.5rem;
    }
    .about-content p {
      color: #ccc;
      line-height: 1.6;
      margin-bottom: 1rem;
    }
    .build-button {
      display: inline-block;
      padding: 1rem 2rem;
      font-size: 1.2rem;
      background: #463C6F;
      color: white;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      transition: transform 0.3s ease;
      margin-top: 2rem;
    }
    .build-button:hover {
      transform: scale(1.05);
    }
    .flex-container-left {
      position: relative;
    }
    
    .logout-btn {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
    }
    
    .logout-link {
      background-color: #9b59b6;
      color: #fff;
      padding: 6px 14px;
      border-radius: 8px;
      font-weight: normal;
      transition: background-color 0.3s ease, transform 0.2s ease, font-weight 0.2s ease;
      box-shadow: 0 0 10px rgba(155, 89, 182, 0.6);
      display: inline-block;
      margin: 0; /* remove default h3 margin if needed */
    }
    
    /* On hover, only change background and font-weight — NOT color */
    .logout-link:hover {
      background-color: #8e44ad;
      font-weight: bold;
      color: #fff !important; /* force white color */
      transform: scale(1.05);
    }
    

  </style>
</head>
