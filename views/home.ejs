  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('.contact-form');
    
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        burstConfetti();
        form.reset();
        // Optionally, you could also clear the form or show another message here.
      });
    
      function burstConfetti() {
        // Create a full‑screen container for the confetti
        const confettiContainer = document.createElement('div');
        confettiContainer.classList.add('confetti');
        // Style it to cover the viewport
        Object.assign(confettiContainer.style, {
          position: 'fixed',
          top: '0',
          left: '0',
          width: '100%',
          height: '100%',
          zIndex: '9999'
        });
        document.body.appendChild(confettiContainer);
    
        // Create 50 confetti pieces
        for (let i = 0; i < 50; i++) {
          const confettiPiece = document.createElement('div');
          confettiPiece.classList.add('confetti-piece');
          // Random horizontal position (0% to 100%)
          confettiPiece.style.left = Math.random() * 100 + '%';
          // Random animation delay so they don't all move at once
          confettiPiece.style.animationDelay = Math.random() * 0.5 + 's';
          // Set a random background color from a preset list
          confettiPiece.style.backgroundColor = getRandomColor();
          // Optionally, you could also randomize the size:
          confettiPiece.style.width = confettiPiece.style.height = Math.random() * 6 + 5 + 'px';
          confettiContainer.appendChild(confettiPiece);
        }
    
        // Remove the confetti container after 5 seconds
        setTimeout(() => {
          confettiContainer.remove();
        }, 5000);
      }
    
      function getRandomColor() {
        const colors = ['#ffd300', '#de561c', '#ff3864', '#4bc0c8', '#4b0082'];
        return colors[Math.floor(Math.random() * colors.length)];
      }
    });
