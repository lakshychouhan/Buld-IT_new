 /* Confetti container – this will be created dynamically */
.confetti {
    pointer-events: none; /* Ensure clicks pass through */
    overflow: visible;
  }
  
  /* Each confetti piece */
  .confetti-piece {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: #ffd300; /* default color; will be overridden inline */
    top: 0;
    opacity: 1;
    /* Assign the burst animation (2 seconds duration, ease-out, and forwards to retain end state) */
    animation: burst 2s ease-out forwards;
  }
  
  /* The burst animation: pieces move downward and fade out */
  @keyframes burst {
    0% {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
    100% {
      /* Adjust the translateY value for desired fall distance */
      transform: translateY(300px) scale(0.5);
      opacity: 0;
    }
  }
  
